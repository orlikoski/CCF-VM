{
  "_comment": "Build with `packer build skadi_desktop.json`",
  "builders": [
    {
      "type": "vmware-vmx",
      "source_path": "C:/Path/To/Skadi Desktop 2018.3/Skadi Desktop 2018.3.vmx",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo shutdown -P now"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "box/{{.Provider}}/{{user `vm_name`}}-{{user `version`}}.box",
      "type": "vagrant",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "variables": {
    "vagrantfile_template": "../../Vagrant/skadi_desktop/vmware/Vagrantfile",
    "version": "2018.3",
    "vm_name": "skadi_desktop"
  }
}
